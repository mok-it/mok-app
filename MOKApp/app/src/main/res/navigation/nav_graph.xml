<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/detailsFragment"
        android:name="mok.it.app.mokapp.fragments.DetailsFragment"
        android:label="Mancs adatai"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentsFragment"
        android:name="mok.it.app.mokapp.fragments.CommentsFragment"
        android:label="Kommentek"
        tools:layout="@layout/fragment_comments"/>
    <fragment
        android:id="@+id/allBadgesListFragment"
        android:name="mok.it.app.mokapp.fragments.AllBadgesListFragment"
        tools:layout="@layout/fragment_all_badges_list"
        android:label="Az összes Mancs">
        <action
            android:id="@+id/action_allBadgesListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_myBadgesFragment"
            app:destination="@id/myBadgesFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_phoneBookFragment"
            app:destination="@id/phoneBookFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="mok.it.app.mokapp.fragments.LoginFragment"
        android:label="Bejelentkezés"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_allBadgesListFragment"
            app:destination="@id/allBadgesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="mok.it.app.mokapp.fragments.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/myBadgesFragment"
        android:name="mok.it.app.mokapp.fragments.MyBadgesFragment"
        android:label="Saját Mancsaim"
        tools:layout="@layout/fragment_my_badges"/>
    <fragment
        android:id="@+id/adminFragment"
        android:name="mok.it.app.mokapp.fragments.AdminFragment"
        android:label="Admin oldal"
        tools:layout="@layout/fragment_admin" />
    <fragment
        android:id="@+id/phoneBookFragment"
        android:name="mok.it.app.mokapp.fragments.PhoneBookFragment"
        android:label="Telefonkönyv"
        tools:layout="@layout/fragment_phone_list"/>
</navigation>