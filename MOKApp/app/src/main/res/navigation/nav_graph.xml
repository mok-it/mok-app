<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allBadgesListFragment">
    <fragment
        android:id="@+id/detailsFragment"
        android:name="mok.it.app.mokapp.fragments.DetailsFragment"
        android:label="Mancs adatai"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/action_detailsFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" />
        <argument
            android:name="badgeId"
            app:argType="string" />
        <deepLink
            android:id="@+id/badge_deeplink"
            android:autoVerify="true"
            app:uri="mokegyesulet.hu/app/badges/{badgeId}" />
        <action
            android:id="@+id/action_detailsFragment_to_badgeAllMemberDialogFragment"
            app:destination="@id/badgeAllMemberDialogFragment" />
        <action
            android:id="@+id/action_detailsFragment_to_editBadgeFragment"
            app:destination="@id/editBadgeFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentsFragment"
        android:name="mok.it.app.mokapp.fragments.CommentsFragment"
        android:label="Kommentek"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="badgeId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/allBadgesListFragment"
        android:name="mok.it.app.mokapp.fragments.AllBadgesListFragment"
        android:label="Az összes Mancs"
        tools:layout="@layout/fragment_all_badges_list">
        <action
            android:id="@+id/action_allBadgesListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_myBadgesFragment"
            app:destination="@id/myBadgesFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_adminFragment"
            app:destination="@id/adminFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_phoneBookFragment"
            app:destination="@id/phoneBookFragment" />
        <argument
            android:name="category"
            android:defaultValue="UNIVERZALIS"
            app:argType="mok.it.app.mokapp.model.Category" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_linksFragment"
            app:destination="@id/linksFragment" />
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="mok.it.app.mokapp.model.Filter"
            app:nullable="true" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_filterDialogFragment"
            app:destination="@id/filterDialogFragment" />
        <action
            android:id="@+id/action_allBadgesListFragment_to_createBadgeFragment"
            app:destination="@id/createBadgeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="mok.it.app.mokapp.fragments.LoginFragment"
        android:label="Bejelentkezés"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_allBadgesListFragment"
            app:destination="@id/allBadgesListFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="mok.it.app.mokapp.fragments.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/myBadgesFragment"
        android:name="mok.it.app.mokapp.fragments.MyBadgesFragment"
        android:label="Saját Mancsaim"

        tools:layout="@layout/fragment_my_badges">
        <action
            android:id="@+id/action_myBadgesFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminFragment"
        android:name="mok.it.app.mokapp.fragments.AdminFragment"
        android:label="Admin oldal"
        tools:layout="@layout/fragment_admin" />
    <fragment
        android:id="@+id/phoneBookFragment"
        android:name="mok.it.app.mokapp.fragments.PhoneBookFragment"
        android:label="Telefonkönyv"
        tools:layout="@layout/fragment_phone_list" />
    <fragment
        android:id="@+id/linksFragment"
        android:name="mok.it.app.mokapp.fragments.LinksFragment"
        android:label="Linkek"
        tools:layout="@layout/fragment_links" />
    <dialog
        android:id="@+id/filterDialogFragment"
        android:name="mok.it.app.mokapp.dialog.FilterDialogFragment"
        android:label="Filterek"
        tools:layout="@layout/fragment_filter_dialog">
        <argument
            android:name="filter"
            android:defaultValue="@null"
            app:argType="mok.it.app.mokapp.model.Filter"
            app:nullable="true" />
    </dialog>
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />
    <dialog
        android:id="@+id/badgeAcceptMemberDialogFragment"
        android:name="mok.it.app.mokapp.dialog.BadgeAcceptMemberDialogFragment"
        android:label="BadgeAcceptMemberDialogFragment"
        tools:layout="@layout/fragment_badge_accept_member_dialog">
        <argument
            android:name="user"
            app:argType="mok.it.app.mokapp.model.User" />
    </dialog>
    <dialog
        android:id="@+id/badgeAllMemberDialogFragment"
        android:name="mok.it.app.mokapp.dialog.BadgeMembersDialogFragment"
        android:label="BadgeAllMemberDialogFragment"
        tools:layout="@layout/fragment_badge_all_members_dialog">
        <argument
            android:name="canEdit"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="users"
            app:argType="mok.it.app.mokapp.model.User[]" />
        <action
            android:id="@+id/action_badgeAllMemberDialogFragment_to_badgeAcceptMemberDialogFragment"
            app:destination="@id/badgeAcceptMemberDialogFragment" />
    </dialog>
    <fragment
        android:id="@+id/memberFragment"
        android:name="mok.it.app.mokapp.fragments.MemberFragment"
        android:label="Adatok"
        tools:layout="@layout/fragment_member">
        <argument
            android:name="user"
            app:argType="mok.it.app.mokapp.model.User" />
    </fragment>
    <action
        android:id="@+id/action_global_memberFragment"
        app:destination="@id/memberFragment" />
    <dialog
        android:id="@+id/createBadgeFragment"
        android:name="mok.it.app.mokapp.fragments.CreateBadgeFragment"
        android:label="CreateBadgeFragment"
        tools:layout="@layout/fragment_create_badge">
        <argument
            android:name="category"
            app:argType="mok.it.app.mokapp.model.Category" />
    </dialog>
    <dialog
        android:id="@+id/editBadgeFragment"
        android:name="mok.it.app.mokapp.fragments.EditBadgeFragment"
        android:label="EditBadgeFragment"
        tools:layout="@layout/fragment_create_badge">
        <argument
            android:name="badge"
            app:argType="mok.it.app.mokapp.model.Project" />
    </dialog>
</navigation>